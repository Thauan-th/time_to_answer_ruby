<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Listando Perguntas</h1> 
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
              <th>#</th>
              <th><%= @questions.model.human_attribute_name(:description) %></th>
              <th><%= @questions.model.human_attribute_name(:subject)%></th>
              <th>
                 <%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle" do %> 
                  <i class="fa fa-plus"></i>
                <% end %> 
              </th>
          </tr>
      </thead>
      <tbody>
          <% @questions.each do |question| %>
          <tr>
              <td><%= question.id %></td>
              <td><%= question.description.truncate(50) %></td>
              <td><%= question.subject.description.truncate(30) %></td>
              <td style="width: 100px"> 

                <%= link_to edit_admins_backoffice_question_path(question) do %>
                  <button type="button" class="btn btn-primary btn-circle">
                  <i class="fa fa-edit"></i>
                  </button>
                <% end %>

             <%= link_to admins_backoffice_question_path(question), method: :delete, data: { confirm: "Deseja realmente apagar ?" }  do %> 
                  <button type="button" class="btn btn-danger btn-circle">
                  <i class="fa fa-minus"></i>
                  </button>
              <% end %> 
              </td>
          </tr>
          <% end %>
      </tbody>
  </table>

  <div class="text-center">
    <%= paginate @questions %>
  </div>
</div>
